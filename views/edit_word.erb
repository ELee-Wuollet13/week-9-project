<h1>Update <%= @word.text() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input text="_method" type="hidden" value="patch">

  <label for="text">Retext word</label>
  <input id="text" text="text" type="text">

  <button type="submit">Update</button>
</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input text="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>

<p><a href="/words">Return to word list</a></p>
