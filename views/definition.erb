<h2>Word: <%= @definition.text %></h2>
<ul>
  <li>Definition: <%= @definition.word.text %></li>
</ul>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input text="_method" type="hidden" value="patch">

  <label for="text">change definition</label>
  <input id="text" text="text" type="text" value="<%= @definition.text %>">
  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input text="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.text %></a>
